!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Instructonator"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    
    = javascript_include_tag "application"
    = stylesheet_link_tag "bootstrap.min.css"
    = stylesheet_link_tag "token-input-facebook.css"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"


  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/posts"} Instructionator
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav

            
            %form.navbar-form.navbar-left{:role => "search"}
              .form-group
                %input.form-control{:placeholder => "Search", :type => "text"}/
              %button.btn.btn-default{:type => "submit"} Submit
            %ul.nav.navbar-nav.navbar-right
              - if !signed_in?
                %li= link_to "fb", user_facebook_omniauth_authorize_path
                %li= link_to "vk", user_vkontakte_omniauth_authorize_path
                %li= link_to "tw", user_twitter_omniauth_authorize_path
              - else
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  = current_user.name
                  %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      %a{:href => "#"} My profile
                    %li.divider
                    %li= link_to 'Sign out', destroy_user_session_path, :method => :delete

              

    .container
      .row
        .col-lg-
          = bootstrap_flash
          = yield
        .well.sidebar-nav
          %h3 Tags cloud
          #tag_cloud
            %ul.nav.nav-list
              - tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class|
                = link_to tag.name, tag_path(tag.name), class: css_class
  %footer
    %p &copy; Company 2017
