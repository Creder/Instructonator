
<%= form_for([@post, @step]) do |f| %>

<div>
    <%= f.label :title %>
    <%= f.text_field :title %>	
</div>
<div>
    <%= f.label :content %>
    <%= f.text_area :content %>
</div>
    <%= cl_image_tag(@step.stepimage, :alt => "Step Image", :width => 200, :height => 200, :crop => :fill)%>
<div class="form_controls">
        <%= f.file_field :stepimage %>
 <div class="form_line">
      <div class="form_controls">
        <%= f.submit %>
        <% if @error %><span class="error"><%= @error %></span><% end %>
      </div>
</div>

<% end %>
<%= csrf_meta_tags %>
<%= cloudinary_js_config %>
