<%= content_tag_for :div, step do %> 
  <div class="panel-heading">
    <h3 class="panel-title"><%= step.title %></h3>
  </div>
  <div class="panel-body">
  <%= image_tag(step.stepimage.thumbnail.url, :class => "") %>
    <%= truncate step.content%>
  </div>
  <% unless params[:action] == 'show'%>
    <% if can? :update, step %>
      <%= link_to 'Edit', edit_post_step_path(@post, step) %> |
    <% end %>
    <% if can? :destroy, step %>
      <%= link_to 'Destroy', post_step_path(@post, step), method: :delete %>
    <% end %>
  <% end %>
  <h3>Comments </h3>
  <% if step.comments.any? %>
    <%= render step.comments =%>
  <% else %>
    <p>No comments yet</p>
  <% end %>
<!--  -->
<% end %>
