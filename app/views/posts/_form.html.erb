<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)"%>
    <%= f.autocomplete_field :tag_list, autocomplete_tag_name_posts_path, 
                            :value => f.object.tag_list.to_s, 
                            'data-delimiter' => ', 
                            ', 'data-auto-focus' => true,
                            :multiple => true %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
