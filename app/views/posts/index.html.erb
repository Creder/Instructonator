<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>Instruction: <%= link_to post.title, post%> || </td> 
        <td> Author: <%= link_to post.user.name %>  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% else %>
<p>You must sign in for create posts!</p>
<% end %>
